<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="15dp"
    android:background="#ffff"
    android:padding="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp">

        <ImageView
            android:id="@+id/profil"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/found" />

        <TextView
            android:id="@+id/produit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/profil"
            android:text="Nom produit"
            android:textColor="#1C1C1C"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/adresse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/produit"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/profil"
            android:text="Adresse"
            android:textColor="#707070" />

        <TextView
            android:id="@+id/statut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/produit"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/adresse"
            android:text="Statut"
            android:textColor="#E40D0D" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>